<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.example.ivan.wifip2pbasic.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/green"/>

    <EditText
        android:text="Hello World 2!"
        android:id="@+id/editText"
        android:layout_below="@+id/textView2"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:textColor="@color/green"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Peers"
        android:id="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/button2"
        android:layout_toRightOf="@id/button1"
        android:layout_alignBottom="@id/button1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:id="@+id/button3"
        android:layout_toRightOf="@id/button2"
        android:layout_alignBottom="@id/button1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Service Text"
        android:id="@+id/textView2"
        android:layout_below="@id/textView1"
        android:textColor="@color/green"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:id="@+id/button4"
        android:layout_below="@id/button1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Preview"
        android:id="@+id/button5"
        android:layout_above="@+id/previewFrame" />

    <FrameLayout
        android:layout_width="144dp"
        android:layout_height="176dp"
        android:id="@+id/previewFrame"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="176dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/previewFrame"
        android:layout_toRightOf="@+id/previewFrame"
        android:layout_toEndOf="@+id/previewFrame" />


</RelativeLayout>
